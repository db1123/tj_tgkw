  <select id="getTrainingProgramDataList" parameterType="fun.server.model.customQuery.trainingprogram.TrainingprogramCS" resultType="fun.server.model.customQuery.trainingprogram.TrainingprogramData">
    SELECT
    ttp.FKeyID,ttp.FState,ttp.FCDATE,ttp.FUDATE,IFNULL(ttp.FName,'') AS FName,ttp.FJS,ttp.FZYJS,ttp.FEdition,ttp.FEditionNo,ttp.FValid
    ,tm.FKeyID AS FMjorID,tm.FMajorName AS FMjorName
    ,tc.FCollegeName AS FCollegeName,ttp.FParentId
    FROM t_training_program ttp
    LEFT JOIN t_major tm
    ON ttp.FTMID = tm.FKeyID
    LEFT JOIN t_college tc
    ON tm.FCollegeID = tc.FKeyID
    where 1=1

    <if test="FMjorName != null and FMjorName!=''">
      and tm.FMajorName like concat('%',#{FMjorName},'%')
    </if>
    <if test="FName != null and FName!=''">
      and ttp.FName like concat('%',#{FName},'%')
    </if>
    <if test="FCollegeName != null and FCollegeName!=''">
      and tc.FCollegeName like concat('%',#{FCollegeName},'%')
    </if>
    <if test=" FValid != null and FValid!= -1 ">
      and ttp.FValid = #{FValid}
    </if>
    <if test="orderBy != null and orderBy!=''">
      order by ${orderBy}
    </if>
  </select>
  <select id="getTrainingVersionDataList" parameterType="fun.server.model.customQuery.trainingprogram.TrainingprogramversionCS" resultType="fun.server.model.customQuery.trainingprogram.TrainingprogramData">
    SELECT
    ttp.FKeyID,ttp.FState,ttp.FCDATE,ttp.FUDATE,IFNULL(ttp.FName,'') AS FName,ttp.FJS,ttp.FZYJS,ttp.FEdition,ttp.FEditionNo,ttp.FValid
    ,tm.FKeyID AS FMjorID,tm.FMajorName AS FMjorName
    ,tc.FCollegeName AS FCollegeName,ttp.FParentId
    FROM t_training_program ttp
    LEFT JOIN t_major tm
    ON ttp.FTMID = tm.FKeyID
    LEFT JOIN t_college tc
    ON tm.FCollegeID = tc.FKeyID
    where 1=1 and ttp.FValid = 0
    <if test=" FParentId != null and FParentId!='' ">
      and (ttp.FKeyid = #{FParentId} or ttp.FParentId = #{FParentId})
    </if>
    <if test="orderBy != null and orderBy!=''">
      order by ${orderBy}
    </if>
  </select>

  <select id="getCourseVersionDataList" parameterType="fun.server.model.customQuery.trainingprogram.TrainingprogramversionCS" resultType="fun.server.model.customQuery.trainingprogram.CouserVersionData">
    SELECT ifnull(tcn.FName,'') AS FNatureName,ifnull(tcc.FName,'') AS FTypeName,
    tc.FKeyID,tc.FCDATE,tc.FUDATE,IFNULL(tc.FNo,'') AS FNo,IFNULL(tc.FName,'') AS FName,IFNULL(tc.FYWName,'') AS FYWName,tc.FType AS FTypeID,tc.FCNature AS FNatureID,tc.FCredits,tc.FSJZS,tc.FJYXNXQ,
    tc.FIstk,tc.FValid,tc.FParentId,tc.FEdition
    FROM t_course tc
    LEFT JOIN t_course_nature tcn
    ON tc.FCNature = tcn.FKeyID
    LEFT JOIN t_course_category tcc
    ON tcc.FKeyID = tc.FType
    WHERE 1=1 AND tc.FValid = 0
    <if test=" FParentId != null and FParentId!='' ">
      and (tc.FKeyid = #{FParentId} or tc.FParentId = #{FParentId})
    </if>
    <if test="orderBy != null and orderBy!=''">
      order by ${orderBy}
    </if>
  </select>


