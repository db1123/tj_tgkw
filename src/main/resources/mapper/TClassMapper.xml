  <select id="getClassopenList" parameterType="fun.server.model.customQuery.tclass.tclassopenCS"
          resultType="fun.server.model.customQuery.tclass.tclassopenData">

    SELECT tcs.FKeyID, tce.FCollegeName,tmj.FMajorName,
    CONCAT(tge.FGradeName,tge.FMonth,'月',
    CASE
    WHEN tge.FSeason = 1 THEN '春'
    WHEN tge.FSeason = 2 THEN '秋'
    END,
    '' ,tmj.FMajorName,tcs.FClassName ) AS FClassName
    ,(SELECT COUNT(*) FROM t_class_student tcss WHERE tcss.FClassID = tcs.FKeyID AND FState = 1) AS FClassStudentNum
    ,tcs.FGradeID AS FGradeID
    FROM t_class tcs
    LEFT JOIN t_major tmj
    ON tcs.FMajorID = tmj.FKeyID
    LEFT JOIN t_grade tge
    ON tcs.FGradeID = tge.FKeyID
    LEFT JOIN t_college tce
    ON tmj.FCollegeID = tce.FKeyID
    WHERE 1=1
    <if test="FCollegeName != null and FCollegeName!=''">
      and tce.FCollegeName like concat('%',#{FCollegeName},'%')
    </if>
    <if test="FMajorName != null and FMajorName!=''">
      and tmj.FMajorName like concat('%',#{FMajorName},'%')
    </if>
    <if test="FGradeID != null and FGradeID!='' and FGradeID!='-1' ">
      and tcs.FGradeID = #{FGradeID}
    </if>
    <if test=" FClassName != null and FClassName!=''">
      and tcs.FClassName like concat('%',#{FClassName},'%')
    </if>
    <if test="orderBy != null and orderBy!=''">
      order by ${orderBy}
    </if>
  </select>

