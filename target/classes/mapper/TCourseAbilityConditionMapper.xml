  <select id="getCourseAbilityConditionList" parameterType="fun.server.model.customQuery.courseabilityCondition.CourseabilityCondtionCS" resultType="fun.server.model.customQuery.courseabilityCondition.CourseabilityCondtionData">
    SELECT talc.FKeyID AS FCourseAbilityConditionID,IFNULL(talc.FName,'') AS FCourseAbilityConditionName,talc.FScore,talc.FNote FROM t_ability_level_condition talc
    LEFT JOIN t_course_ability_condition tcac
    ON tcac.FConditionID = talc.FKeyID
    <if test="FCourseID != null and FCourseID!='' and FCourseID!='0' ">
      AND tcac.FCourseID = #{FCourseID}
    </if>
    WHERE  tcac.FConditionID IS NULL AND talc.FState = 1
    <if test="name != null and name!=''">
      and talc.FName like concat('%',#{name},'%')
    </if>
    <if test="orderBy != null and orderBy!=''">
      order by ${orderBy}
    </if>
  </select>

  <select id="getLevelAbilityConditionIDList" parameterType="fun.server.model.customQuery.courseabilityCondition.CourseabilityCondtionCS" resultType="Long">
    SELECT
    SUBSTRING(
    FPath,
    LOCATE('||_', FPath) + 3,          -- 从第一个'||_'后3位开始
    LOCATE('_||', FPath, LOCATE('||_', FPath) + 3) - (LOCATE('||_', FPath) + 3)
    ) AS levelID
    FROM t_ability_tree
    WHERE FNodeType = 3
    <choose>
      <when test="FCourseID != null and FCourseID!='' and FCourseID!='0' ">
        AND FALCID = #{FCourseID}
      </when>
      <otherwise>
        AND FALCID = 0
      </otherwise>
    </choose>
    GROUP BY levelID
  </select>


