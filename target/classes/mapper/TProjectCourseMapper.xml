  <select id="getProjectCourseSeelect"  parameterType="fun.server.model.customQuery.projectcourse.ProjectCourseCs" resultType="fun.server.model.customQuery.projectcourse.ProjectCoursedata">
    SELECT tpc.FKeyID,tp.FName as FTrainingProgramName,tm.FMajorName as FMajorName,tc.FName as FCourseName,tc.FNo as FCourseNo,tc.FEdition as FCourseEdition,
        CONCAT(tp.FName, '/', tm.FMajorName,'/',tc.FNo,'/',tc.FName) as FName
    FROM t_training_program_course tpc
         LEFT JOIN t_training_program tp
                   ON tpc.FTPID = tp.FKeyID
         LEFT JOIN t_major tm
                   ON tpc.FTMID = tm.FKeyID
         LEFT JOIN t_course tc
                   ON tpc.FCourseID = tc.FKeyID
    WHERE tp.FState =2 AND tp.FValid =1
    <choose>
      <when test="FMajorId != null and FMajorId!='' and FMajorId!='0' ">
        and tpc.FTMID = #{FMajorId}
      </when>
      <otherwise>
        and tpc.FTMID = 0
      </otherwise>
    </choose>
    <if test="FName != null and FName!=''">
      and (tc.FName like concat('%',#{FName},'%') or tc.FNo like concat('%',#{FName},'%') or tc.FYWName like concat('%',#{FName},'%'))
    </if>
    <if test="orderBy != null and orderBy!=''">
      order by ${orderBy}
    </if>
