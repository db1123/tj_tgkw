  <select id="getTCourseScheduleList" parameterType="fun.server.model.customQuery.courseSchedule.courseScheduleCS" resultType="fun.server.model.customQuery.courseSchedule.courseScheduleData">
    SELECT
    tcs.*,CONCAT(tc.FNo,'_',tc.FName,'_',tc.FClassroom) AS FCRMName
    FROM t_course_schedule tcs
    LEFT JOIN t_course_offering tco
    ON tcs.FCOID = tco.FKeyID
    LEFT JOIN t_classroom tc
    ON tcs.FCRMID = tc.FKeyID
    WHERE 1=1
    <choose>
      <when test="FCOID != null and FCOID!='' and FCOID!='0' ">
        AND tcs.FCOID = #{FCOID}
      </when>
      <otherwise>
        AND tcs.FCOID =  0
      </otherwise>
    </choose>
    <if test="FCRMName != null and FCRMName!=''">
      and (tc.FNo LIKE concat('%',#{FCRMName},'%') OR tc.FName LIKE concat('%',#{FCRMName},'%') OR tc.FClassroom LIKE concat('%',#{FCRMName},'%') )
    </if>
    <if test="FWeekday != null and FWeekday!='' and FWeekday!= -1">
      and tcs.FWeekday = #{FWeekday}
    </if>
    <if test="orderBy != null and orderBy!=''">
      order by ${orderBy}
    </if>
  </select>

