  <select id="getCourseModelData"  resultType="fun.server.model.customQuery.coursemb.CourseMbData">
    WITH RECURSIVE TreePath AS (
      -- 基础查询：获取根节点
      SELECT
        FKeyID,
        FName,
        CAST(FName AS CHAR(255)) AS PATH,
        FIsleaf,
        FPID
      FROM
        `t_course_category`
      WHERE
        FPID = 1  -- 假设根节点的 FPID 为 NULL
      UNION ALL

      -- 递归查询：获取子节点并构建路径
      SELECT
        t.FKeyID,
        t.FName,
        CONCAT('【',tp.Path, '】——>【', t.FName,'】') AS PATH,
        t.FIsleaf,
        t.FPID
      FROM
        `t_course_category` t
          INNER JOIN
        TreePath tp ON t.FPID = tp.FKeyID
    )
    SELECT
      FKeyID,
      FName,
      FPID,
      PATH AS FMName
    FROM
      TreePath
    WHERE
      FIsleaf = 1  -- 只显示叶子节点
    ORDER BY
      FPID;
  </select>

