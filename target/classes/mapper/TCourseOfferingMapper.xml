  <select id="getTCourseOfferingList" parameterType="fun.server.model.customQuery.courseoffering.courseOfferingCS" resultType="fun.server.model.customQuery.courseoffering.courseOfferingData">
    SELECT
    tco.*, ifnull(ttp.FName,'') AS FTPName,ifnull(tc.FName,'') AS FCourseName,ifnull(ts.FName,'') AS FSemesterName,ifnull(tt.FName,'') AS FTeacherName,tc.FNo as FCourseNo
    FROM t_course_offering tco
    LEFT JOIN t_training_program ttp
    ON tco.FTPID = ttp.FKeyID
    LEFT JOIN t_course tc
    ON tco.FCourseID = tc.FKeyID
    LEFT JOIN t_semester ts
    ON tco.FSemester = ts.FKeyID
    LEFT JOIN t_teacher tt
    ON tco.FTeacher = tt.FKeyID
    WHERE 1=1
    <if test="FTPName != null and FTPName!=''">
      and ttp.FName like concat('%',#{FTPName},'%')
    </if>
    <if test="FCourseName != null and FCourseName!=''">
      and tc.FName like concat('%',#{FCourseName},'%')
    </if>
    <if test="FCourseNo != null and FCourseNo!=''">
      and tc.FNo like concat('%',#{FCourseNo},'%')
    </if>
    <if test="FSemesterName != null and FSemesterName!=''">
      and ts.FName like concat('%',#{FSemesterName},'%')
    </if>
    <if test="FTeacherName != null and FTeacherName!=''">
      and tt.FName like concat('%',#{FTeacherName},'%')
    </if>
    <if test="orderBy != null and orderBy!=''">
      order by ${orderBy}
    </if>
  </select>

  <select id="getTCourseOfferingListopen" parameterType="fun.server.model.customQuery.courseoffering.courseOfferingopenCS" resultType="fun.server.model.customQuery.courseoffering.courseOfferingData">
      SELECT
      tco.*, ifnull(ttp.FName,'') AS FTPName,ifnull(tc.FName,'') AS FCourseName,ifnull(ts.FName,'') AS
      FSemesterName,ifnull(tt.FName,'') AS FTeacherName,tc.FNo as FCourseNo,tc.FType as FCourseFType,tc.FCNature as FCourseNatureID,tc.FEdition as FEdition
      FROM t_course_offering tco
      LEFT JOIN t_training_program ttp
      ON tco.FTPID = ttp.FKeyID
      LEFT JOIN t_course tc
      ON tco.FCourseID = tc.FKeyID
      LEFT JOIN t_semester ts
      ON tco.FSemester = ts.FKeyID
      LEFT JOIN t_teacher tt
      ON tco.FTeacher = tt.FKeyID
      WHERE 1=1 and tco.FStatus = 2
      <if test="FLTypeID != null and FLTypeID!=''">
          and tc.FType = #{FLTypeID}
      </if>
      <if test="FNatureID != null and FNatureID!=''">
          and tc.FCNature = #{FNatureID}
     </if>
      <if test="FCourseName != null and FCourseName!=''">
          and tc.FName like concat('%',#{FCourseName},'%')
      </if>
      <if test="FCourseNo != null and FCourseNo!=''">
          and tc.FNo like concat('%',#{FCourseNo},'%')
      </if>
      <if test="orderBy != null and orderBy!=''">
          order by ${orderBy}
      </if>
  </select>

